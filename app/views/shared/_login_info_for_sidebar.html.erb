<% if current_user %>
	<h3><%= t('authentication.status.logged_in') %></h3>
	<p><%= current_user.name %>, <%= current_user.email %> | <%= link_to t('authentication.logout'), logout_path %>
	</p>
<% else %>
	<h3><%= t('authentication.status.not_logged_in') %></h3>
	<p><%= link_to t('authentication.login_now').capitalize, login_path %> <%= t('or') %> <%= link_to t('authentication.create_account'), signup_path %>
  </p>
<% end %>
