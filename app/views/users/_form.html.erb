<%= simple_form_for user, :html => { class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

    <%= f.input :email %>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
    <%= f.input :other_name %>
    <%= f.input :password %>
		<%= f.input :password_confirmation, required: true %>

    <%= f.button :submit, t('authentication.create_account'), :class => 'btn btn-primary' %>
<% end %>
