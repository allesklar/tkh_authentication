<%= simple_form_for user, url: save_names_and_validate_email_user_path, :html => { class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :input_html => { autofocus: true } %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :other_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'save and verify email address', :class => 'btn btn-primary' %>
  </div>
<% end %>
