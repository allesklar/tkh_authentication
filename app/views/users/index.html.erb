<h1>Listing Users</h1>

<table class='table table-striped'>
	<thead>
  <tr>	
			<th><%= t 'authentication.name' %></th>
	    <th><%= t 'activerecord.attributes.user.email' %></th>
			<th>Admin?</th>
	  </tr>
	</thead>
	
	<tbody>
		<% @users.each do |user| %>
		  <tr>
		    <td><%= user.name %></td>
				<td><%= user.email %></td>
				<td>
					<% unless user.admin? %>
					  <span class="label label-important">X</span> <%= link_to t('authentication.enable_admin'), make_admin_user_path(user), class: 'btn btn-mini', method: :post %>
					<% else %>
						<span class="label label-success">âœ“</span> <%= link_to t('authentication.disable_admin'), remove_admin_user_path(user), class: 'btn btn-mini', method: :post %>
					<% end -%>
				</td>
		  </tr>
		<% end %>
	</tbody>
</table>

<%= render 'shared/admin_sidebar' %>